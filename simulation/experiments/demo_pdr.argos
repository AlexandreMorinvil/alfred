    <box id= " wall6" size="0.100000,1.200000,2" movable="false">
      <body position="2.124558, 0.504246, 0" orientation="0,0,0" />
    </box>
    <box id= " wall7" size="1.200000,0.100000,2" movable="false">
      <body position="-4.001201, 3.395781, 0" orientation="0,0,0" />
